{
  "name": "a11y-road",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "---------------------- Docusaurus ---------": "",
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "---------------------- typecheck - lint - format - spellcheck ---------": "",
    "typecheck": "tsc",
    "lint": "biome check . && eslint src/",
    "lint:fix": "biome check --write . && eslint src/ --fix",
    "format": "biome format --write .",
    "lint:md": "markdownlint-cli2 \"docs/**/*.md\" \"docs/**/*.mdx\" \"blog/**/*.md\" \"blog/**/*.mdx\"",
    "spellcheck": "cspell \"docs/**\" \"blog/**\" \"src/**\"",
    "---------------------- vitest ---------": "",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "---------------------- playwright ---------": "",
    "test:e2e": "playwright test",
    "test:e2e:report": "playwright show-report",
    "test:a11y": "playwright test --grep @a11y",
    "---------------------- storybook ---------": "",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "---------------------- husky ---------": "",
    "prepare": "husky"
  },
  "dependencies": {
    "@docusaurus/core": "3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^2.0.0",
    "prism-react-renderer": "^2.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@biomejs/biome": "^2.4.3",
    "@docusaurus/module-type-aliases": "3.9.2",
    "@docusaurus/tsconfig": "3.9.2",
    "@docusaurus/types": "3.9.2",
    "@eslint/js": "^9.39.2",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.2",
    "@storybook/addon-a11y": "^10.2.10",
    "@storybook/addon-docs": "^10.2.10",
    "@storybook/addon-onboarding": "^10.2.10",
    "@storybook/addon-webpack5-compiler-swc": "^4.0.2",
    "@storybook/react-webpack5": "^10.2.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "cspell": "^9.6.4",
    "eslint": "^9.39.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-storybook": "^10.2.10",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.21.0",
    "playwright": "^1.58.2",
    "storybook": "^10.2.10",
    "storybook-addon-docusaurus": "^0.3.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=20.0"
  },
  "packageManager": "pnpm@9.6.0",
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write --no-errors-on-unmatched",
      "eslint --no-errors-on-unmatched"
    ],
    "*.{css,json}": "biome check --write --no-errors-on-unmatched",
    "*.{md,mdx}": "markdownlint-cli2"
  }
}
