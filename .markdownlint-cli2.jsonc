{
  "ignores": [".agents/**"],
  "config": {
    "default": true,
    // Allow long lines — docs tend to have them
    "MD013": false,
    // Allow inline HTML/JSX — needed for MDX
    "MD033": false,
    // Don't count frontmatter title as an H1 — we use both frontmatter title (metadata) and # heading (content)
    "MD025": { "front_matter_title": "" }
  }
}
